{
  "title": "API Performance - PostgreSQL & Redis",
  "tags": ["load-testing", "performance"],
  "timezone": "browser",
  "editable": true,
  "graphTooltip": 1,
  "panels": [
    {
      "id": 1,
      "title": "PostgreSQL - Active Connections",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "pg_stat_database_numbackends{datname=\"apidb\"}",
          "legendFormat": "Active Connections",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "drawStyle": "line", "fillOpacity": 10 },
          "unit": "short"
        }
      }
    },
    {
      "id": 2,
      "title": "Redis - Connected Clients",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "redis_connected_clients",
          "legendFormat": "Connected Clients",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "drawStyle": "line", "fillOpacity": 10 },
          "unit": "short"
        }
      }
    },
    {
      "id": 3,
      "title": "PostgreSQL - Transactions per Second",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "rate(pg_stat_database_xact_commit{datname=\"apidb\"}[1m])",
          "legendFormat": "Commits/sec",
          "refId": "A"
        },
        {
          "expr": "rate(pg_stat_database_xact_rollback{datname=\"apidb\"}[1m])",
          "legendFormat": "Rollbacks/sec",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "drawStyle": "line", "fillOpacity": 10 },
          "unit": "ops"
        }
      }
    },
    {
      "id": 4,
      "title": "Redis - Operations per Second",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "targets": [
        {
          "expr": "rate(redis_commands_processed_total[1m])",
          "legendFormat": "Commands/sec",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "drawStyle": "line", "fillOpacity": 10 },
          "unit": "ops"
        }
      }
    },
    {
      "id": 5,
      "title": "PostgreSQL - Cache Hit Ratio",
      "type": "gauge",
      "gridPos": { "h": 8, "w": 6, "x": 0, "y": 16 },
      "targets": [
        {
          "expr": "rate(pg_stat_database_blks_hit{datname=\"apidb\"}[5m]) / (rate(pg_stat_database_blks_hit{datname=\"apidb\"}[5m]) + rate(pg_stat_database_blks_read{datname=\"apidb\"}[5m])) * 100",
          "legendFormat": "Cache Hit %",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": 0, "color": "red" },
              { "value": 80, "color": "yellow" },
              { "value": 95, "color": "green" }
            ]
          },
          "unit": "percent",
          "min": 0,
          "max": 100
        }
      }
    },
    {
      "id": 6,
      "title": "Redis - Keyspace Hit Rate",
      "type": "gauge",
      "gridPos": { "h": 8, "w": 6, "x": 6, "y": 16 },
      "targets": [
        {
          "expr": "rate(redis_keyspace_hits_total[5m]) / (rate(redis_keyspace_hits_total[5m]) + rate(redis_keyspace_misses_total[5m])) * 100",
          "legendFormat": "Hit Rate %",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": 0, "color": "red" },
              { "value": 70, "color": "yellow" },
              { "value": 90, "color": "green" }
            ]
          },
          "unit": "percent",
          "min": 0,
          "max": 100
        }
      }
    },
    {
      "id": 7,
      "title": "Redis - Memory Usage",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
      "targets": [
        {
          "expr": "redis_memory_used_bytes",
          "legendFormat": "Used Memory",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "drawStyle": "line", "fillOpacity": 10 },
          "unit": "bytes"
        }
      }
    },
    {
      "id": 8,
      "title": "PostgreSQL - Deadlocks",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 24 },
      "targets": [
        {
          "expr": "rate(pg_stat_database_deadlocks{datname=\"apidb\"}[5m])",
          "legendFormat": "Deadlocks/sec",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": 0, "color": "green" },
              { "value": 0.01, "color": "yellow" },
              { "value": 0.1, "color": "red" }
            ]
          },
          "unit": "ops"
        }
      }
    },
    {
      "id": 9,
      "title": "Redis - Evicted Keys",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 24 },
      "targets": [
        {
          "expr": "rate(redis_evicted_keys_total[5m])",
          "legendFormat": "Evictions/sec",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": 0, "color": "green" },
              { "value": 1, "color": "yellow" },
              { "value": 10, "color": "red" }
            ]
          },
          "unit": "ops"
        }
      }
    }
  ],
  "refresh": "5s",
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": ["5s", "10s", "30s", "1m", "5m"]
  },
  "version": 1
}
